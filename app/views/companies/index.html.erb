<%-
  Struct.new('MockCompanies',:name,:handle)
  companies = [
    Struct::MockCompanies.new('test1','test1-handle1'),
    Struct::MockCompanies.new('test2','test1-handle2'),
    Struct::MockCompanies.new('test3','test1-handle3'),
    Struct::MockCompanies.new('test4','test1-handle4')
  ]
%>

<h1>Listing companies</h1>

<table class='table table-bordered'>

<% @companies.each do |company| %>
  <tr>
    <td><%= link_to 'select',"/add_company?company_id=#{company.id}", :class => 'btn'%></td>
    <td><%= company.name %></td>
    <td><%= company.email %></td>
    <td><%= company.phone %></td>
    <td><%= company.address %></td>
    <td><%= company.fax %></td>
    <td><%= company.handle %></td>
  </tr>
<% end %>
</table>

<%= link_to 'Back to history', root_url,:class => 'btn btn-primary' %>