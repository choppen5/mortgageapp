
<h1>Listing companies</h1>

<table class='table table-bordered'>

<% @companies.each do |company| %>
  <tr>
    <td><%= link_to 'select',edit_users_company_path(current_user, :company_id => company.id), :class => 'btn'%></td>
    <td><%= company.name %></td>
    <td><%= company.email %></td>
    <td><%= company.phone %></td>
    <td><%= company.address %></td>
    <td><%= company.fax %></td>
    <td><%= company.handle %></td>
  </tr>
<% end %>
</table>

<%= link_to 'Back to history', root_url,:class => 'btn btn-primary' %>